<tr>
  <td class="col-min">
    <span class="label label-info"><i class="fa fa-pencil"></i></span>
  </td>
  <td>
    <strong>{{ log.source.typLabel }}</strong> {{ audit_assoc(log.source) }} was updated,
    {{ audit_blame(log.blame) }}
  </td>
  <td class="col-min">{{ log.loggedAt|date('d/m/Y') }}</td>
  <td class="col-min">
    <a class="btn btn-xs btn-link" href="{{ path('vouchedfor_audit_ui_diff', {id: log.id}) }}">
      <i class="fa fa-search" title="Show diff"></i>
    </a>
  </td>
</tr>
